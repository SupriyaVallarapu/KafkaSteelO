openapi: '3.0.2'
info:
  version: 1.0.0
  title: Kafka Message API
  description: API for consuming Kafka messages

paths:
  /get/all/{offset}/{topic}/{group_id}:
    get:
      summary: Get all Kafka messages
      parameters:
        - name: offset
          in: path
          description: The offset to start consuming messages from (either 'earliest' or 'latest')
          required: true
          type: string
        - name: topic
          in: path
          description: The Kafka topic to consume messages from
          required: true
          type: string
        - name: group_id
          in: path
          description: The Kafka consumer group ID
          required: true
          type: string
      responses:
        '200':
          description: Successful operation
          schema:
            type: array
            items:
              type: object
        '400':
          description: Invalid request parameters
          schema:
            type: object
            properties:
              error:
                type: string
        '500':
          description: Failed to retrieve messages
          schema:
            type: object
            properties:
              error:
                type: string
